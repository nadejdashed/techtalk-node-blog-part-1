<!doctype html>
<html lang="en">
<%- include _head %>
<body>
  <h1>Node.js blog</h1>
  <p><a href="/create">New post</a></p>
  <% for(var i = 0; i < posts.length; i++) { %>
  <% var post = posts[i]; %>
    <article>
      <h2><a href="/show/<%= i %>"><%= post.title %></a></h2>
      <h6><%= post.date %></h6>
      <p><%- post.content %></p>
    </article>
    <p><a href="/edit/<%=i%>">Edit</a></p>
  <% } %>
</body>
</html>